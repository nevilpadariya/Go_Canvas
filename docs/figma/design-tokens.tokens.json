{
  "global": {
    "color": {
      "brand": {
        "50": { "$type": "color", "$value": "#EFF6FF" },
        "100": { "$type": "color", "$value": "#DBEAFE" },
        "300": { "$type": "color", "$value": "#93C5FD" },
        "500": { "$type": "color", "$value": "#2563EB" },
        "600": { "$type": "color", "$value": "#1D4ED8" },
        "700": { "$type": "color", "$value": "#1E40AF" }
      },
      "surface": {
        "background": { "$type": "color", "$value": "#F8FAFC" },
        "card": { "$type": "color", "$value": "#FFFFFF" },
        "elevated": { "$type": "color", "$value": "#F1F5F9" }
      },
      "text": {
        "primary": { "$type": "color", "$value": "#0F172A" },
        "secondary": { "$type": "color", "$value": "#475569" },
        "muted": { "$type": "color", "$value": "#64748B" },
        "inverse": { "$type": "color", "$value": "#F8FAFC" }
      },
      "border": {
        "subtle": { "$type": "color", "$value": "#E2E8F0" },
        "strong": { "$type": "color", "$value": "#CBD5E1" }
      },
      "state": {
        "success": { "$type": "color", "$value": "#16A34A" },
        "warning": { "$type": "color", "$value": "#D97706" },
        "danger": { "$type": "color", "$value": "#DC2626" },
        "info": { "$type": "color", "$value": "#0284C7" }
      },
      "status": {
        "graded": { "$type": "color", "$value": "#16A34A" },
        "submitted": { "$type": "color", "$value": "#0284C7" },
        "missing": { "$type": "color", "$value": "#DC2626" },
        "late": { "$type": "color", "$value": "#D97706" },
        "unpublished": { "$type": "color", "$value": "#64748B" }
      }
    },
    "font": {
      "family": {
        "body": { "$type": "fontFamilies", "$value": "Public Sans" },
        "heading": { "$type": "fontFamilies", "$value": "Public Sans" },
        "mono": { "$type": "fontFamilies", "$value": "IBM Plex Mono" }
      },
      "size": {
        "xs": { "$type": "dimension", "$value": "12" },
        "sm": { "$type": "dimension", "$value": "14" },
        "md": { "$type": "dimension", "$value": "16" },
        "lg": { "$type": "dimension", "$value": "18" },
        "xl": { "$type": "dimension", "$value": "24" },
        "xxl": { "$type": "dimension", "$value": "32" }
      },
      "weight": {
        "regular": { "$type": "fontWeights", "$value": "400" },
        "medium": { "$type": "fontWeights", "$value": "500" },
        "semibold": { "$type": "fontWeights", "$value": "600" },
        "bold": { "$type": "fontWeights", "$value": "700" }
      },
      "lineHeight": {
        "tight": { "$type": "number", "$value": "1.2" },
        "normal": { "$type": "number", "$value": "1.45" },
        "relaxed": { "$type": "number", "$value": "1.65" }
      }
    },
    "space": {
      "4": { "$type": "dimension", "$value": "4" },
      "8": { "$type": "dimension", "$value": "8" },
      "12": { "$type": "dimension", "$value": "12" },
      "16": { "$type": "dimension", "$value": "16" },
      "24": { "$type": "dimension", "$value": "24" },
      "32": { "$type": "dimension", "$value": "32" },
      "40": { "$type": "dimension", "$value": "40" },
      "48": { "$type": "dimension", "$value": "48" }
    },
    "radius": {
      "sm": { "$type": "dimension", "$value": "6" },
      "md": { "$type": "dimension", "$value": "10" },
      "lg": { "$type": "dimension", "$value": "12" },
      "xl": { "$type": "dimension", "$value": "16" }
    },
    "shadow": {
      "card": {
        "$type": "boxShadow",
        "$value": {
          "x": "0",
          "y": "1",
          "blur": "3",
          "spread": "0",
          "color": "rgba(15, 23, 42, 0.08)",
          "type": "dropShadow"
        }
      },
      "popover": {
        "$type": "boxShadow",
        "$value": {
          "x": "0",
          "y": "8",
          "blur": "24",
          "spread": "-8",
          "color": "rgba(15, 23, 42, 0.18)",
          "type": "dropShadow"
        }
      }
    },
    "layout": {
      "desktop": {
        "frameWidth": { "$type": "dimension", "$value": "1440" },
        "contentMax": { "$type": "dimension", "$value": "1200" },
        "topbarHeight": { "$type": "dimension", "$value": "64" },
        "sidebarCollapsed": { "$type": "dimension", "$value": "72" },
        "sidebarExpanded": { "$type": "dimension", "$value": "224" }
      },
      "table": {
        "rowHeight": { "$type": "dimension", "$value": "44" },
        "headerHeight": { "$type": "dimension", "$value": "48" }
      }
    }
  }
}
